{
    "name": "Online Video Downloader",
    "version": "1.0",
    "description": "To download videos",
    "permissions": ["storage", 
                    "webRequest",
                    "<all_urls>"],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
      },
      "default_title": "Online video downloader"
    },
    "options_page": "options.html",
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "manifest_version": 2
}